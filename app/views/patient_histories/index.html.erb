        <td><%= patient_history.allergy_description %></td>
        <td><%= link_to 'Show', patient_history %></td>
        <td><%= link_to 'Edit', edit_patient_history_path(patient_history) %></td>
        <td><%= link_to 'Destroy', patient_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
