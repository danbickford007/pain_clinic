  </thead>

  <tbody>
    <% @patient_histories.each do |patient_history| %>
      <tr>
        <td><%= patient_history.alcohol %></td>
        <td><%= patient_history.drinks_per_day %></td>
        <td><%= patient_history.years_been_drnking %></td>
